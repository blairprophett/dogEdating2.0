<h3>LANDING PAGE!</h3>

<%#= form_tag(method: 'get') do %>
  <%#= text_field_tag(term: params[:term], placeholder: "Search Parks") %>
  <%#= submit_tag("Search") %>
<%# end %>

<div class= search-form>
  <form method="get" action="/">
    <input type="text" name="term" placeholder="Search Dog Parks">
    <input type="submit">
  </form>
</div><br/>

<div class='yelp-results'>
  <% @yelp_info.each do |business| %> 
  <!-- add code for if an item is nil -->
    <strong><%= business['name'] %></strong><br/>
    <img src="<%= business['image_url'] %>" /><br/> 
    <strong>Neighborhood:</strong> <%= business['location']['neighborhoods'][0] %><br/>
    <%= business['location']['address'][0] %><br/>
    <%= business['location']['display_address'][2] %><br/>
    <a href="<%= business['url'] %>">View on Yelp</a><br/><br/> 
  <% end  %>
</div>


