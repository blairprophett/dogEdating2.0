<h1><%= @park.name %></h1>

  <p><strong>Address: </strong>
  <%= @park.street_address %><br/>
  <%= @park.city %>
  <%= @park.zip %>
  <%= @park.state %></p><br/>


  <%= form_for :favorite, method: :post, url: dog_favorites_path(current_user.dog) do |f| %>
    <%= f.hidden_field :park_id, value: @park.id %>
    <%= f.submit "Add to Favorites", class: 'btn btn-default' %>
  <% end %><br/>

<%= link_to 'Search Again', '/search', class: 'btn btn-default' %><br/>

<h3>Dogs who roam here</h3>
<!--shows all dogs who have favorited this park-->
  <% @park.dogs.each do |dog| %>
    <p><%= link_to(dog.name, dog_path(dog)) %> </p>
    <p><%= image_tag dog.image %></p>
  <% end %>