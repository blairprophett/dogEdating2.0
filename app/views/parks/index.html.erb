<h1>Results</h1>

Search Term:  <strong><%= params[:park][:address] %></strong><br/>

<%= link_to 'Search Again', '/search', class: 'btn btn-default' %><br/>

<div class='search'>
  <% @yelp_info.each do |business| %> <br/>
    <div class='yelp-results'>
      <strong><%= business['name'] %></strong><br/>
      <%= business['location']['address'][0] %><br/>
      <%= business['location']['city'] %>
      <%= business['location']['state_code'] %>
      <%= business['location']['postal_code'] %><br/>
      <a href="<%= business['url'] %>">View on Yelp</a><br/> 
      <div class="yelp-photo"><img src="<%= business['image_url'] %>" /></div>

    <%= form_for :park, method: :post, url: parks_path do |f| %>
      <%= f.hidden_field :name, value: business['name'] %>
      <%= f.hidden_field :yelp_id, value: business['id'] %>
      <%= f.hidden_field :street_address, value: business['location']['address'][0] %>
      <%= f.hidden_field :city, value: business['location']['city'] %>
      <%= f.hidden_field :state, value: business['location']['state_code'] %>
      <%= f.hidden_field :zip, value: business['location']['postal_code'] %>
      <%= f.hidden_field :img_url, value: business['url'] %>
      <%= f.submit "View Park", class: 'btn btn-default' %>
    <% end %>

