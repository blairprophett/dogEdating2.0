<h2>Message <%= @user.dog.name %></h2><br/>

<%= form_for :conversation, method: :post, url: '/messages' do |f| %>
 <%= f.hidden_field :recipient, value: @user.id %>
  <%= f.text_field :subject, placeholder: 'Subject' %><br/><br/>
  <%= f.text_area :body, placeholder: 'Body' %><br/>
  <%= f.submit 'Send Message', :class => 'btn btn-primary' %><br/><br/>
<% end %>