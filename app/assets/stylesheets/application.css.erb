/* layout#application */
body {
  background-color: #CDC0B0;
  font-family: 'Exo 2', sans-serif;
}

.btn {
  background-color: #708090;
  border: 3px solid #708090;
  color: white;
}

.btn:hover {
  background-color: #F0FFFF;
  border: 3px solid #F0FFFF;
  color: black;
}

 .HolyGrail {
  display: flex;
  min-height: 100vh;
  flex-direction: column;
}

.HolyGrail-body {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.HolyGrail-content {
  flex: 1;
  background-color: #C1CDC1;
  margin: 0px 15px;
  padding-bottom: 15px;
  border-radius: 15px;
  text-align: center;
}

/* _header */
header {
  background-color: #CDC0B0;
}

.container ul > li > a {
  font-size: 18px;
  color: #EEE9E9;
}

.container ul > li > a:hover {
  background-color: #838B8B;
  color: #CDC0B0;
  font-size: 19px;
}

.navbar-brand {
  color: #C6E2FF;
  font-family: 'Exo 2', sans-serif;
  font-size: 24px;
}

.navbar-brand:hover {
  color: #C1CDC1;
  font-size: 25px;
}

.navbar, navbar-custom {
  margin: 12px;
  border-radius: 15px;
  background-color: #838B8B;
}

.icon-bar {
  background-color: grey;
}

/* _footer */
.container-footer {
  background-color: #C1CDCD;
  height: 40px;
  text-align: right;
  padding-right: 20px;
  padding-top: 10px;
  margin: 12px;
  border-radius: 15px;
}

.container-footer > footer > a {
  color: grey;
  padding: 12px;
  font-size: 17px;
}

.container-footer > footer > a:hover {
  color: #EEE9E9;
  font-size: 18px;
}

/* _sidebar_left */
.HolyGrail-sidebar-left {
  order: -1;
  margin: 0px 15px 15px 15px;
  border-radius: 15px;
  flex: 0 0 5em;
  background-image: url('<%= asset_path('wavegrid.png')%>');
}

.HolyGrail-sidebar-left > .navbar {
  margin: 12px;
  border-radius: 15px;
  background-image: url('<%= asset_path('wavegrid.png')%>');
}

.container-sidebar ul > li > a {
  color: grey;
  font-size: 18px;
}

.container-sidebar ul > li > a:hover {
  background-image: url('<%= asset_path('wavegrid.png')%>');
  color: #CDC0B0;
  font-size: 19px;
}

/* _sidebar_left */
.HolyGrail-sidebar-right {
  background-image: url('<%= asset_path('wavegrid.png')%>');
  margin: 15px 15px 0px 15px;
  border-radius: 10px;
  flex: 0 0 12em;
}

.HolyGrail-sidebar-right > img {
  width: 120px;
}

/* parks#search */
.yelp-results {
  flex-wrap: wrap;
}

.yelp-photo {
 text-align: center;
}

.yelp-photo > img {
  border-radius: 50px;
}

/* sites#landing */
.landing-img > img {
  width: 350px;
  padding-top: 30px;
}

.landing-buttons {
  padding-top: 30px;
}

/* dog#show */
.dog-profile-img > img {
  width: 250px;
}

/* park#show */
.dog-favorite > img {
  width: 100px;
  border-radius: 20px;
}

@media (min-width: 768px) {
  .HolyGrail-body {
    flex-direction: row;
  }

  .HolyGrail-sidebar-left, .HolyGrail-sidebar-right {
    /* 12em is the width of the columns */
    flex: 0 0 12em;
    text-align: center;
  } 

  .HolyGrail-sidebar-left {
    margin: 0px 0 0px 10px;
  }

  .HolyGrail-sidebar-left ul > li > a {
    color: grey;
    font-size: 20px;
  }

  .HolyGrail-sidebar-left ul > li > a:hover {
  font-size: 21px;
}

  .HolyGrail-sidebar-right > img {
    width: 120px;
    margin: 35px 0px 35px 0px;
  }

  .HolyGrail-sidebar-right {
    margin: 0px 10px 0px 0px;
  }
}

